<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_900">

    <TextView
        android:id="@+id/bottom_sheet_position_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="포지션을 선택해주세요"
        android:textColor="@color/gray_500"
        android:textSize="18sp"
        android:lineHeight="17sp"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_plan_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_position_title_tv">

        <View
            android:id="@+id/bottom_sheet_plan_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_800"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan"
            android:textColor="@color/gray_100"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_bold"
            android:paddingVertical="25dp"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_plan_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_design_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_plan_cl">

        <View
            android:id="@+id/bottom_sheet_design_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_800"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Design"
            android:textColor="@color/gray_100"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_bold"
            android:paddingVertical="25dp"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_design_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_web_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_design_cl">

        <View
            android:id="@+id/bottom_sheet_web_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_800"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web"
            android:textColor="@color/gray_100"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_bold"
            android:paddingVertical="25dp"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_web_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_ios_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_web_cl">

        <View
            android:id="@+id/bottom_sheet_ios_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_800"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iOS"
            android:textColor="@color/gray_100"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_bold"
            android:paddingVertical="25dp"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_ios_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_android_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_ios_cl">

        <View
            android:id="@+id/bottom_sheet_android_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_800"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android"
            android:textColor="@color/gray_100"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_bold"
            android:paddingVertical="25dp"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_android_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_server_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_android_cl">

        <View
            android:id="@+id/bottom_sheet_server_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_800"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server"
            android:textColor="@color/gray_100"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_bold"
            android:paddingVertical="25dp"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_server_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottom_sheet_position_cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="닫기"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="18sp"
        android:textColor="@color/gray_50"
        android:textAlignment="center"
        android:paddingVertical="16dp"
        android:background="@drawable/login_round_5_o"
        android:backgroundTint="@color/main"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_server_cl"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>