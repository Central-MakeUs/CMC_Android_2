<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_info_top_bar"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/my_info_back_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_left"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/gray_50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 정보"
            android:textColor="@color/gray_50"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_info_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/my_info_top_bar"
        android:paddingHorizontal="24dp">

        <TextView
            android:id="@+id/my_info_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/gray_500"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/my_info_name_value_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_50"
            android:text=""
            android:fontFamily="@font/pretendard_medium"
            android:paddingHorizontal="5dp"
            android:paddingVertical="0dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:textCursorDrawable="@drawable/bg_et_cursor"
            android:maxLines="1"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/my_info_name_tv"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/my_info_name_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_700"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/my_info_name_value_tv"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_info_nickname_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/my_info_name_layout"
        android:paddingHorizontal="24dp">

        <TextView
            android:id="@+id/my_info_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/gray_500"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/my_info_nickname_value_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_50"
            android:text=""
            android:fontFamily="@font/pretendard_medium"
            android:paddingHorizontal="5dp"
            android:paddingVertical="0dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:textCursorDrawable="@drawable/bg_et_cursor"
            android:maxLines="1"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/my_info_nickname_tv"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/my_info_nickname_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_700"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/my_info_nickname_value_tv"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_info_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/my_info_nickname_layout"
        android:paddingHorizontal="24dp">

        <TextView
            android:id="@+id/my_info_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/gray_500"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/my_info_email_value_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_50"
            android:text=""
            android:fontFamily="@font/pretendard_medium"
            android:paddingHorizontal="5dp"
            android:paddingVertical="0dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:textCursorDrawable="@drawable/bg_et_cursor"
            android:maxLines="1"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/my_info_email_tv"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/my_info_email_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_700"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/my_info_email_value_tv"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/my_info_now_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 기수"
        android:textColor="@color/gray_500"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="14sp"
        android:layout_marginTop="27dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/my_info_email_layout"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/my_info_generation_tv"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/gray_300"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="11sp"
        android:background="@drawable/login_round_5_x"
        android:paddingVertical="4dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/my_info_now_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/my_info_part_tv"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/gray_300"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="11sp"
        android:background="@drawable/login_round_5_x"
        android:paddingVertical="4dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toBottomOf="@id/my_info_now_tv"
        app:layout_constraintStart_toEndOf="@id/my_info_generation_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>